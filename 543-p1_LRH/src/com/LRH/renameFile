package com.LRH;

import java.io.*;

String newFileCodeName()
{
    long fileSize = file.length();   //get the size of file
    String fileCurrentName = file.getName();   //get the original name of file to be renamed
    String extension = substring(fileCurrentName.lastIndexOf("."));   //get the file extension
    int currentCharacter = 0 checkSum = 0;   //set a starting point for computing checksum
    while (currentCharacter != fileCurrentName.lastIndexOf(".") && fileCurrentName.charAt(currentCharacter) != 46)   //compute the checksum
        {
            if currentCharacter % 4 == 2;
            {
                fileCurrentName.charAt(currentCharacter) = fileCurrentName.charAt(currentCharacter) * 3;
            }
            if currentCharacter % 4 == 3;
            {
                fileCurrentName.charAt(currentCharacter) = fileCurrentName.charAt(currentCharacter) * 11;
            }
            if currentCharacter % 4 == 0;
            {
                fileCurrentName.charAt(currentCharacter) = fileCurrentName.charAt(currentCharacter) * 17;
            }
            checkSum = fileCurrentName.charAt(currentCharacter) + checkSum;
            currentCharacter++;
        }
    fileCurrentName.renameTo(checkSum + "." + fileSize + extension);
}
